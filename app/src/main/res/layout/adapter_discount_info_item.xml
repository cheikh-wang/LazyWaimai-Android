<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_minor"
    android:paddingLeft="@dimen/spacing_major"
    android:paddingRight="@dimen/spacing_minor"
    android:paddingTop="@dimen/spacing_minor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:background="@color/red"
            tools:text="满"
            />

        <TextView
            android:id="@+id/txt_name"
            style="@style/Txt.Main"
            android:layout_marginLeft="@dimen/spacing_minor"
            android:layout_marginRight="@dimen/spacing_minor"
            tools:text="满减优惠"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/txt_price"
            style="@style/Txt.Auxiliary"
            android:layout_width="70dp"
            android:textColor="@color/orange"
            tools:text="￥1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_desc"
        style="@style/Txt.AuxiliaryInfo"
        android:layout_marginTop="@dimen/spacing_minor"
        tools:text="在线支付满25减10"
        />

</LinearLayout>
